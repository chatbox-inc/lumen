{
    "name": "mkkn/lumen2",
    "authors": [
        {
            "name": "mikakane",
            "email": "mikakane2@gmail.com"
        }
    ],
    "extra": {
        "installer-paths": {
            "backend/{$name}": ["chatbox-inc/lumen-providers"]
        }
    },
    "autoload":{
        "psr-4":{
            "Chatbox\\RestApp\\":"./backend/restapp/src/",
            "Chatbox\\PageApp\\":"./backend/pageapp/src/"
        }
    },
    "scripts":{
        "post-update-cmd": [],
        "post-package-install": [],
        "post-install-cmd": [],
        "post-autoload-dump": [],
        "post-create-project-cmd": [
            "git init && git commit -m first_commit --allow-empty",
            "git subtree add --prefix=backend/app https://github.com/chatbox-inc/lumen-app.git master",
            "cp .env.example .env"
        ]
    },
    "require": {
        "laravel/lumen": "^5.2",
        "chatbox-inc/lumen-providers": "dev-master",
        "barryvdh/laravel-debugbar": "^2.2"
    }
}
